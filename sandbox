function initialUpdate(option) {
  let call = "";
  // option = event.target.id;
  document.getElementById("initialButtons").style.visibility = "hidden";
  switch (option) {
    case 0:
      call += "attack left ";
      break;
    case 1:
      call += "attack right ";
      break;
    case 2:
      call += "point-in-line left ";
      break;
    case 3:
      call += "point-in-line right ";
      break;
    case 4:
      call += "simultaneous attacks, ";
      break;
    case 5:
      call += "yellow card left, ";
      break;
    case 6:
      call += "yellow card right, ";
      break;
    case 7:
      call += "red card left, ";
      break;
    case 8:
      call += "red card right, ";
      break;
    default:
      call += "ERROR: check element ids in switch";
      break;
  }

  document.getElementById("result").innerHTML = call;

  return call;

}




